<div class="flex justify-center">
  <label class="input input-primary">
    <input class="grow" placeholder="搜索" id="search-input" />
    <span class="btn btn-square btn-ghost btn-sm" style="margin-right: -8px;" id="search-icon">🔍</span>
  </label>
</div>
<script>
  const searchInput = document.getElementById(
    "search-input"
  ) as HTMLInputElement;
  const search = () => {
    const value = (searchInput.value || "").trim();
    if (value) {
      const qs = encodeURI(
        value
          .split(" ")
          .filter((it) => it)
          .join("+")
      );
      location.href = `https://cn.bing.com/search?q=${qs}`;
    }
  };
  searchInput.addEventListener("keyup", (e) => {
    if (e.key === "Enter") {
      search();
    }
  });

  const searchIcon = document.getElementById("search-icon");
  searchIcon.addEventListener("click", () => {
    search();
  });
</script>
