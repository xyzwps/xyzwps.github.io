<div class="flex justify-center px-4">
  <div class="w-full max-w-md">
    <div class="relative group p-[1px] rounded-xl bg-gradient-to-r from-indigo-200/40 via-purple-200/20 to-indigo-200/40">
      <div class="bg-white/50 backdrop-blur-sm rounded-[10px]">
        <div class="relative">
          <input
            type="text"
            id="search-input"
            placeholder="搜索..."
            class="w-full px-5 py-3 rounded-xl bg-transparent text-gray-700 placeholder-gray-500 focus:outline-none transition-all duration-200"
          />
          <button
            id="search-icon"
            class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-indigo-600 transition-colors duration-200 cursor-pointer"
            aria-label="搜索"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  const searchInput = document.getElementById(
    "search-input"
  ) as HTMLInputElement;
  const search = () => {
    const value = (searchInput.value || "").trim();
    if (value) {
      const qs = encodeURI(
        value
          .split(" ")
          .filter((it) => it)
          .join("+")
      );
      location.href = `https://cn.bing.com/search?q=${qs}`;
    }
  };
  searchInput.addEventListener("keyup", (e) => {
    if (e.key === "Enter") {
      search();
    }
  });

  const searchIcon = document.getElementById("search-icon");
  searchIcon.addEventListener("click", () => {
    search();
  });
</script>
