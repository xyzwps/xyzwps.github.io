---
import MdxContentLayout from "../../layouts/MdxContentLayout.astro";
import type { MdxLayoutProps } from "../../layouts/MdxLayoutProps";

type Props = MdxLayoutProps;

const colorTheme = {
  background: "bg-indigo-50",
  border: "border border-indigo-50",
  borderColor: "border-indigo-200",
  textColor: "text-gray-500",
  accentColor: "text-indigo-700",
};

const breadcrumbItems = [{ href: "/blogs", name: "文章列表" }];
---

<MdxContentLayout
  {...Astro.props}
  colorTheme={colorTheme}
  breadcrumbItems={breadcrumbItems}
>
  <slot />
</MdxContentLayout>
