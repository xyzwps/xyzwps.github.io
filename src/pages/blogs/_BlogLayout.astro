---
import Breadcrumb from '../../components/Breadcrumb.astro';
import PostToc from '../../components/PostToc.astro';
import MdxLayout from '../../layouts/MdxLayout.astro';
import blogs from './_index.data'
import type { MDXLayoutProps } from 'astro';

type Props = MDXLayoutProps<{
  // 在这里定义 frontmatter 属性
  title: string;
  author: string;
  date: string;
}>;

const { frontmatter, url, title } = Astro.props;

const INDEX_PATH = '/blogs';
---

<MdxLayout {...Astro.props}>
  <Breadcrumb
    slot="breadcrumb"
    items={[
      { title: '🏠️', path: '/' },
      { title: '我的文章', path: INDEX_PATH },
      url == INDEX_PATH ? null : { title: frontmatter.title as string },
    ]}
  />
  <PostToc slot="left" links={blogs.map(it => ({ depth:2, title: it.title, link: it.path }))} />
  <slot slot="center" />
</MdxLayout>
