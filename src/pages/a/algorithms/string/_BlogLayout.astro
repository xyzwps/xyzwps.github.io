---
import Breadcrumb from '../../../../components/Breadcrumb.astro';
import PostToc from '../../../../components/PostToc.astro';
import MdxLayout from '../../../../layouts/MdxLayout.astro';
import type { MDXLayoutProps } from 'astro';

type Props = MDXLayoutProps<{
  // 在这里定义 frontmatter 属性
  title: string;
  author: string;
  date: string;
}>;

const list = [
  { depth: 2, title: 'Levenshtein 距离', link: '/a/algorithms/string/levenshtein-distance' },
  { depth: 2, title: 'TF-IDF 和 BM25', link: '/a/algorithms/string/bm25' },
];

const { frontmatter, url } = Astro.props;

const INDEX_PATH = '/a/algorithms/string';
---

<MdxLayout {...Astro.props}>
  <Breadcrumb
    slot="breadcrumb"
    items={[
      { title: '算法', path: '/a/algorithms' },
      { title: '字符串算法', path: INDEX_PATH },
      url == INDEX_PATH ? null : { title: frontmatter.title, path: url },
    ]}
  />
  <PostToc slot="left" links={list} />
  <slot slot="center" />
</MdxLayout>
