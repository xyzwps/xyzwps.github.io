---
import Breadcrumb from '../../../components/Breadcrumb.astro';
import PostToc from '../../../components/PostToc.astro';
import MdxLayout from '../../../layouts/MdxLayout.astro';
import type { MDXLayoutProps } from 'astro';

type Props = MDXLayoutProps<{
  // 在这里定义 frontmatter 属性
  title: string;
  author: string;
  date: string;
}>;

const list = [
  { depth: 2, title: 'MAC', link: '/a/hash/mac' },
  { depth: 2, title: 'CRC32', link: '/a/hash/crc32' },
  { depth: 2, title: 'FNV-1a', link: '/a/hash/fnv1a' },
  { depth: 2, title: 'Murmur3', link: '/a/hash/murmur3' },
  { depth: 2, title: 'Sip', link: '/a/hash/sip' },
];

const { frontmatter, url } = Astro.props;

const INDEX_PATH = '/a/hash';
---

<MdxLayout {...Astro.props}>
  <Breadcrumb
    slot="breadcrumb"
    items={[
      { title: '哈希算法', path: INDEX_PATH },
      url == INDEX_PATH ? null : { title: frontmatter.title, path: url },
    ]}
  />
  <PostToc slot="left" links={list} />
  <slot slot="center" />
</MdxLayout>
