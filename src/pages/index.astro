---
import CommonHeader from '../components/CommonHeader.astro';

const blogs = [
  { href: '/blogs/2024-08-30-seckill', title: '秒杀问题' },
  { href: '/blogs/2024-08-27-dg-to-di', title: '从有向图到依赖注入' },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>xyzwps pages</title>
  </head>
  <body>
    <div class="bg-slate-100">
      <CommonHeader />
    </div>
    <div class="container mx-auto bg-white flex flex-col border-x-gray-500 px-4 min-h-screen text-base">
      <div class="p-4">
        <h1 class="font-bold">速查手册</h1>
        <ul class="flex gap-2">
          <li class="border px-4 py-2"><a href="/cheatsheet/cyber-huashui">赛博养生学</a></li>
          <li class="border px-4 py-2"><a href="/cheatsheet/spring">Spring</a></li>
        </ul>
      </div>
      <div class="p-4">
        <h1 class="font-bold">最近文章</h1>
        <ul class="list-none">
          {
            blogs.map((it) => (
              <li class="my-2 before:content-['▫']">
                <a class="cursor-pointer p-2 pl hover:bg-indigo-100 rounded" href={it.href}>
                  {it.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </body>
</html>
