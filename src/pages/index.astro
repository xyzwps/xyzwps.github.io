---
import "../styles/global.css";
import SearchInput from "../components/HomePage/SearchInput.astro";
import AnalyticsBaidu from "../components/AnalyticsBaidu.astro";

const list = [
  { title: "Emoji", href: "/list/emoji" },
  { title: "JSON", href: "/app/json-prettier" },
  { title: "文章", href: "/blogs" },
  { title: "乱弹", href: "/ramblings" },
  { title: "列表", href: "/list" },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>xyzwps pages</title>
    <AnalyticsBaidu />
  </head>
  <body style="background: linear-gradient(135deg, #faf5ff 0%, #f9fafb 50%, #f5f2ff 100%)">
    <div class="min-h-screen flex flex-col px-4">
      <div class="w-full flex flex-col items-center flex-1">
        <!-- Header -->
        <div class="text-center pt-24 mb-8">
          <div class="inline-block">
            <h1 class="text-6xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent select-none tracking-tight">
              xyzwps
            </h1>
            <div class="h-1 w-24 bg-gradient-to-r from-indigo-400 to-purple-400 rounded-full mx-auto mt-4 opacity-60"></div>
          </div>
        </div>

        <!-- Search Bar -->
        <div class="w-full max-w-2xl mb-12">
          <SearchInput />
        </div>

        <!-- Navigation Links -->
        <div class="flex justify-center gap-6 text-sm flex-1 items-start">
          {
            list.map((it, i) => (
              <a
                href={it.href}
                class="px-4 py-2 rounded-lg text-gray-600 hover:text-indigo-600 hover:bg-white/40 backdrop-blur-sm border border-transparent hover:border-indigo-200/50 transition-all duration-200"
              >
                {it.title}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </body>
</html>
