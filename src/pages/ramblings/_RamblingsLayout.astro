---
import MdxContentLayout from "../../layouts/MdxContentLayout.astro";
import type { MdxLayoutProps } from "../../layouts/MdxLayoutProps";

type Props = MdxLayoutProps;

const colorTheme = {
  background: "bg-gradient-to-br from-rose-50 via-pink-50 to-rose-50",
  border: "border-2 border-rose-200",
  borderColor: "border-2 border-rose-200",
  textColor: "text-rose-400",
  accentColor: "text-rose-600",
};

const breadcrumbItems = [{ href: "/ramblings", name: "乱弹" }];
---

<MdxContentLayout
  {...Astro.props}
  colorTheme={colorTheme}
  breadcrumbItems={breadcrumbItems}
>
  <slot />
</MdxContentLayout>
