---
import type { MDXLayoutProps } from 'astro';
import HeadingsToc from '../components/HeadingsToc.astro';
import Post from '../components/Post.astro';
import Card from '../components/Card.astro';

type Props = MDXLayoutProps<{
  // 在这里定义 frontmatter 属性
  title: string;
  author: string;
  date: string;
}>;

// 现在，`frontmatter`、`url` 和其他 Markdown 布局属性
// 可以通过 TypeScript 类型安全地访问
const { frontmatter, url, headings } = Astro.props;
---

<html lang="zh-CN">
  <head>
    <link rel="canonical" href={url} />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{frontmatter.title}</title>
    <link href="https://cdn.bootcdn.net/ajax/libs/KaTeX/0.16.4/katex.min.css" rel="stylesheet" />
  </head>
  <body>
    <div class="container">
      <Card style="margin: 8px 8px 0px;"><slot name="breadcrumb" /></Card>
      <div class="xy-post">
        <div class="xy-post-left">
          <Card>
            <slot name="left" />
          </Card>
        </div>

        <div class="xy-post-center">
          <Card>
            <Post title={frontmatter.title}>
              <slot name="center" />
            </Post>
          </Card>
        </div>

        <div class="xy-post-right">
          <Card>
            <HeadingsToc headings={headings} />
          </Card>
        </div>
      </div>
    </div>
  </body>
</html>

<style lang="scss" is:global>
  table {
    border: 1px solid #ced4da;
    border-collapse: collapse;

    tr {
      border-top: 1px solid #ced4da;
      td,
      th {
        border-left: 1px solid #ced4da;
        padding: 8px 16px;
      }
    }
  }

  img {
    width: 100%;
    border: 1px solid #eef;
    border-radius: 4px;
  }

  .math {
    max-width: 100%;
    overflow-y: auto;
  }
  .katex {
    font-size: 1rem;
  }
</style>

<style lang="scss">
  body {
    padding: 0px;
    margin: 0px;
    background-color: #f8f9fa;
  }

  .xy-post {
    padding: 8px;
    display: flex;
    gap: 8px;
  }

  @media only screen and (max-width: 719px) {
    .xy-post {
      .xy-post-left {
        display: none;
      }

      .xy-post-center {
        width: 100%;
      }

      .xy-post-right {
        display: none;
      }
    }
  }

  @media only screen and (min-width: 720px) and (max-width: 1279px) {
    .xy-post {
      .xy-post-left {
        width: 25%;
      }

      .xy-post-center {
        width: 75%;
      }

      .xy-post-right {
        display: none;
      }
    }
  }

  @media only screen and (min-width: 1280px) {
    .xy-post {
      .xy-post-left {
        width: 20%;
      }

      .xy-post-center {
        width: 60%;
      }

      .xy-post-right {
        width: 20%;
      }
    }
  }
</style>
