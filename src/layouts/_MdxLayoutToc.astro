---
import type { MarkdownHeading } from 'astro';
import Row from './_MdxLayoutTocRow.astro';

type Props = { headings: MarkdownHeading[] };

const { headings } = Astro.props;
---

<ol class="ml-3 mt-4 list-disc pl-4 text-indigo-700">
  {
    headings.map((it) =>
      (() => {
        switch (it.depth) {
          case 1:
            return (
              <li class="font-black text-sm">
                <Row slug={it.slug} text={it.text} />
              </li>
            );
          case 2:
            return (
              <li class="font-bold text-sm">
                <Row slug={it.slug} text={it.text} />
              </li>
            );
          case 3:
            return (
              <li class="ml-4 text-sm">
                <Row slug={it.slug} text={it.text} />
              </li>
            );
          case 4:
            return (
              <li class="ml-8 text-xs">
                <Row slug={it.slug} text={it.text} />
              </li>
            );
          default:
            return null;
        }
      })()
    )
  }
</ol>
